@model Blog.Services.ViewModels.Comments.CommentEditViewModel

<main class="form-text">
    <form method="post" asp-controller="Comment" asp-action="EditComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Редактирование комментария</h1>

        <div class="form-floating">
            <input asp-for="Text" type="text" class="form-control" id="floatingInput" placeholder="">
            <label asp-for="Text" for="floatingInput">Комментарий</label>
            <input class="form-control" asp-for="Id" hidden />
            <input class="form-control" asp-for="UserId" hidden />
            <input class="form-control" asp-for="PostId" hidden />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Сохранить</button>
    </form>
</main>