@model Blog.Services.ViewModels.Posts.PostAddViewModel

<div class="container-page">
    <h2 class="title-margin">Добавление статьи</h2>
    <form method="post" asp-controller="Post" asp-action="AddPost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="margin-bottom: 5px">
            <label asp-for="Title"></label><br />
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div style="margin-bottom: 5px">
            <table>
                <label>Теги</label>
                @if (Model is not null)
                {
                    @for (int i = 0; i < Model.Tags.Count; i++)
                    {
                        if (i % 10 == 0)
                        {
                            @:
                            <tr></tr>
                        }
                        <td>
                            @Html.CheckBoxFor(model => model.Tags[i].IsChecked)
                            <lable class="tag-margin" >@Model.Tags[i].Name</lable>
                            @Html.HiddenFor(model => model.Tags[i].Id)
                        </td>
                    }
                }
            </table>
        </div>
        <div style="margin-bottom: 5px">
            <label asp-for="Text"></label><br />
            <textarea class="form-control" id="editor" rows="20" value="" asp-for="Text"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div>
            <input class="btn btn-sm btn-primary" type="submit" value="Создать" onclick="" />
        </div>
        <p>
            <a method="get" asp-controller="Post" asp-action="GetPosts">Перейти к списку всех статей </a>
        </p>
    </form>
</div>