@model Blog.Services.ViewModels.Roles.RoleAddViewModel


<main class="form-text">
    <form method="post" asp-controller="Role" asp-action="AddRole">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Создание новой роли</h1>

        <div class="form-floating">
            <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Название Роли">
            <label asp-for="Name" for="floatingInput">Роль</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Создать</button>
    </form>
</main>