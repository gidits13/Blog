@model Blog.Services.ViewModels.Roles.RolesViewModel
@{
    @if (Model.Roles.Count == 0)
    {
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Список ролей</h1>
                    <p class="lead text-muted">Тэги отсутствуют</p>
                    <p>
                        <a asp-controller="Tag" asp-action="AddTag" class="btn btn-primary my-2">Добавить Тэг</a>
                        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
                    </p>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Список Ролей</h1>
                    <p>
                        <a asp-controller="Role" asp-action="AddRole" class="btn btn-primary my-2">Добавить роль</a>
                        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
                    </p>
                </div>
            </div>
        </section>
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var role in Model.Roles)
                    {
                        <div class="col">
                            <div class="card shadow-sm">

                                <div class="card-body">
                                    <p class="card-text">@role.Name</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id"> <button type="submit" class="btn btn-sm btn-outline-secondary">Edit</button></a>
                                                <a asp-controller="Role" asp-action="DeleteRole" asp-route-id="@role.Id"> <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button></a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}