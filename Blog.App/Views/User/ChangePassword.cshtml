@model Blog.Services.ViewModels.Users.ChangePasswordViewModel

<main class="form-signin">
    <form method="post" asp-controller="User" asp-action="ChangePassword">
        <div asp-validation-summary="All" class="text-danger"></div>
        <img class="mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Введите новый пароль</h1>

        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingInput" placeholder="password">
            <label asp-for="Password" for="floatingInput">password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password2" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password2" for="floatingPassword">Password</label>
            <span asp-validation-for="Password2" class="text-danger"></span>
        </div>
        <input asp-for="UserId" hidden />

        <button class="w-100 btn btn-lg btn-primary" type="submit">Сохранить</button>
        <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
    </form>
</main>