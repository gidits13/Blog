@model Blog.Services.ViewModels.Users.UserEditAdminModeViewModel
@{
    ViewData["Title"] = "Изменение данных пользователя";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>

<div class="max-width-550 m-auto mb-5">
    <form class="mt-5" method="post" asp-controller="User" asp-action="EditUserAdminMode" asp-route-id="@Model.Id">
        <h3>Изменение данных пользователя</h3>
        <hr class="hr" />
        <div asp-validation-summary="ModelOnly" class="text-danger fs-6"></div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="Name" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="LastName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="LastName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="Email" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger error-message"></span>
        </div>

                <div class="form-label col-sm-6 col-form-label">
            @if (Model is not null)
            {
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                  
                        @Html.CheckBoxFor(model => model.Roles[i].isChecked)
                                    <lable class="tag-margin" >@Model.Roles[i].Name</lable>
                        @Html.HiddenFor(model => model.Roles[i].Id)
                                
                }
            }

        </div>
        

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-primary my-2">Изменить пароль</a>
    </form>
</div>

